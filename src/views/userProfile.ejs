  <body>
    <div class="container-fluid overall">
      <div class="row">

        <!---------------------Navigation Below not needed as it is to be imported-->
        <!------- NAVIGATION
          <div class="navigate col-sm-12">

            <div class="row">

              <div class="col-sm-2">
                <h4>isthisarealjob</h4>
              </div>

              <div class="end-nav col-sm-10">

                <div class="end-nav-bar">

                  <input type="text" placeholder="Search" />
                  <img src="https://res.cloudinary.com/kayode/image/upload/v1572364913/icons/Notification_yyq4ta.svg"  alt="notification">

                  <a href="/api/v1/users/<%=user.username%>" class="initial">
                    <span >
                      <%=user.name.split(" ")[0].substr(0, 1) + user.name.split(" ")[1].substr(0, 1) %>
                    </span>
                  </a>

                  <a href="/post">
                    <button class="btn btn-primary">New Post</button>
                  </a>

                </div>
                
              </div>

            </div>
            
          </div>

        ------->

        <!-------Profile Section------->
        <div class="container row my-5  first-section">

          <div class="col-6 col-md-6 col-lg-6 d-lg-flex">

            <img src="https://avatars0.githubusercontent.com/u/44536178?s=460&v=4" alt="Profile-picture">
            
            <br>

            <div class="mt-2 ml-3 mt-lg-3 ml-lg-4">
                <h2 > <%=user.name.split(" ")[0]%> </h2>
                <p>@<%=user.username%></p>
            </div>

          </div> 
          
          <div class="col-6 col-md-3 col-lg-2 offset-md-3 offset-lg-4 align-self-center">
            <button class="btn btn-lg">Edit Profile</button>
          </div>

        </div>

        <!-------Posts Section------->
        <div class=" container post">

          <h3 class="ml-4"> <%=user.Invites.length %> Posts </h3>

          <% if (user.Invites.length === 0) { %>
            <span id="no-comments" class="bg-transparent container">
              The world is your oyseter. Fill it.
            </span>
          <% } %>
            
          <ul> <!-------Invite Body ------->

            <% if (user.Invites.length > 0) {%>
              <% user.Invites.forEach(invite => { %>

                <!-------Invite Main Content------->
                <li class="my-4 p-3 p-md-4 p-lg-4 main">

                  <button class="btn btn-success mb-2 isReal">Real</button>
                  <span> <img src="" alt=""></span>

                  <h4 class="mt-1" style="margin-bottom: -4px;"><%=invite.title%></h4>

                  <small class="font-weight-bold" style="font-size: 10px;">
                    <%=invite.location %>
                  </small>

                  <% if(invite.body.length < 40) {%>

                    <p> <%=invite.body%> <a href="<%='/post/'+invite.inviteId%>">....Read more</a></p>

                  <% }%>

                  <p style="margin-top: 15px;"><%=invite.body.substr(0, 40)%> <a href="<%='/post/'+invite.inviteId%>">....Read more</a></p>

                  <!-------Comments & Upvote Section------->
                  <span class="votes">

                    <a>
                      <img src="https://res.cloudinary.com/kayode/image/upload/v1572411991/cars/comment_gpmq5c.svg" alt="" style="width: 17px;">
                      <span class="upvote-count">0 </span> 
                    </a>

                    <a>
                      <img src="https://res.cloudinary.com/kayode/image/upload/v1572411991/cars/upVotes_reeuc3.svg" alt="" style="width: 17px;">
                      <span> <%=invite.upVotes || 0 %> </span>
                    </a>

                    <a>
                      <img src="https://res.cloudinary.com/kayode/image/upload/v1572411991/cars/downVotes_zajtop.svg" alt="" style="width: 17px;">
                      <span> 0 </span> 
                    </a>

                  </span>

                  <!-------Social Share------->
                  <span class="float-right share-buttons">
                    <!-- <a href="#"><i class="fab fa-facebook-f"></i></i></a> -->
                    <a target="_blank"
                      href="https://twitter.com/intent/tweet?text=<%=invite.title+' - Is this a real job? \n Let us know: http://isthisarealjob.ng/post/'+invite.inviteId%>">

                      <i class="fab fa-twitter fa-lg"></i>

                    </a>
                    <!-- <a href="https://www.instagram.com/"><i class="fab fa-instagram"></i></a> -->
                    <a target="_blank"
                      href="https://api.whatsapp.com/send?&text=<%=invite.title+' - Is this a real job? \n Let us know: http://isthisarealjob.ng/post/'+invite.inviteId%>">
                      <span style="color: #25D366;">
                        <i class="fab fa-whatsapp fa-lg"></i>
                      </span>
                    </a>
                  </span>

                </li>

              <% }) %>
            <% } %>

          </ul>


        </div>

      </div>
    </div> 
  </body>

